{
  // Don't extend the parent tsconfig to avoid inheriting potential React types
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "jsxFactory": "vscpp",
    "jsxFragmentFactory": "vscppf",
    "skipLibCheck": true,
    "types": [],
    "baseUrl": "./",
    "paths": {
      "@vscode/prompt-tsx": ["./node_modules/@vscode/prompt-tsx"],
      "@vscode/prompt-tsx/*": ["./node_modules/@vscode/prompt-tsx/*"],
      "@/*": ["../../../src/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ]
} 